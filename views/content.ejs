    <div class="container m-5 p-5">
        <div id="title" class ="border-bottom border-primary">
            <h1 class="display-1 px-4"><%= article.title %></h1>
            
            
        </div>
        <div class="row">
            <h6 class="display-6 px-5 col-sm-10"><%= article.description%></h6>
            <div style="float: right;" class="col-sm-2 px-5"><%= article.user?.name %></div>
        </div>

        <!-- main content -->
        <div>
            <div class="m-5 p-5 border border-primary">
                <%= article.content %>
            </div>
            
        </div>


        <!-- comments -->
        <div>
            <h6 class="display-6 px-5">Comments</h6> 

            <!-- form -->
            <% if(locals.user){ %>

                <form action="/comment/create-comment" method="POST">
                    <input type="text" name="content" placeholder="Type Here">
                    <input type="text" name="article" value="<%= article._id %>" hidden>
                    <input type="submit" value="Add Comment">
    
                </form>

            <%} %>

            <div class="row">
                
                <% for(comment of article.comments){ %>

                    <div class="card  m-3 row ">
                       
                        <div class="card-body ">
                            <% if(locals.user && locals.user.id==comment.user._id){ %>
                                <span style="float: right">
                                  <a href="/comment/destroy-comment/<%= comment._id %>" style="color:red"><i class="far fa-trash-alt"></i></a>
                                </span>
                                
    
                              <% } %>
                          <h5 class="card-title"><%= comment.content %></h5>
                          <p class="card-text"><%= comment.user.name%></p>
                          <a href="#" class="btn btn-primary">Like</a>
                        </div>

                       
                      </div>
                      

               <% } %>


            </div>
            
        </div>

    </div>
