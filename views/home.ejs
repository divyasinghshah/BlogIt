<div class="container">
  <div class="row">

    <h1 class="display-1 text-center m-5 text-white">Blog Articles</h1>

  </div>

  <% if (locals.user){ %>

    <div class="row">
      <div>
        <a href="/article/new-article">
          <button type="button" class="btn btn-dark btn-lg">Create New Article</button>
        </a>

      </div>

    </div>

    <% } %>

      <div class="row ">

        <% for(article of articles){ %>

          <div class="col-sm-6 col-md-4 my-3">
            <div class="card text-center">
              <div class="card-header text-bold">
                <strong>Title: <%= article.title %></strong> 

                  <% if(locals.user && locals.user.id==article.user?._id){ %>
                    <span style="float: right">
                      <a href="/article/destroy/<%= article._id %>" style="color:red" class="m-2">
                        <i class="far fa-trash-alt"></i>
                      </a>
                     </span>


                    <% } %>


              </div>
              <div class="card-body">
                Description: <%= article.description %>
                  </h5>
                  <p class="card-text">
                    By:<%= article.user?.name %>
                  </p>
                  <a href="/article/content/<%= article._id %>" class="btn btn-primary">Read More</a>
              </div>
              <div class="card-footer text-muted">

                <%= article.createdAt.toDateString() %>


              </div>

            </div>
          </div>


          <%}%>





      </div>
</div>





